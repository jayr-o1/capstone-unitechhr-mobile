<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_rounded_background"
    android:clipToPadding="false"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with title and close button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/resultTitleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/urbanist_semibold"
                android:text="Application Results"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/closeButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="2dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel" />
        </LinearLayout>

        <!-- Match percentage and recommendation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_gradient_blue"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/matchPercentageText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/urbanist_bold"
                android:text="86% Match"
                android:textColor="@color/white"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/recommendationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/urbanist_semibold"
                android:text="Strong Hire"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- Skills Match -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urbanist_semibold"
            android:text="Skills Match"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/skillsMatchText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/urbanist"
            android:textColor="#666666"
            android:textSize="16sp"
            tools:text="13/13 skills matched" />

        <!-- Experience -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urbanist_semibold"
            android:text="Experience"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/experienceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/urbanist"
            android:textColor="#666666"
            android:textSize="16sp"
            tools:text="11 years experience (5 required)" />

        <!-- Education -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urbanist_semibold"
            android:text="Education"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/educationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/urbanist"
            android:textColor="#666666"
            android:textSize="16sp"
            tools:text="Master's degree (Bachelor's required)" />

        <!-- Improvement Suggestions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urbanist_semibold"
            android:text="Improvement Suggestions"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/improvementSuggestionsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/urbanist"
            android:textColor="#666666"
            android:textSize="16sp"
            tools:text="• Add industry-relevant certifications\n• Focus on recent achievements" />

        <!-- Salary Estimate -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urbanist_semibold"
            android:text="Salary Estimate"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/salaryEstimateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/urbanist"
            android:textColor="#666666"
            android:textSize="16sp"
            tools:text="$100,000 - $265,000 USD" />

        <!-- Close Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/okButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:text="OK"
            android:textSize="16sp"
            app:cornerRadius="8dp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView> 