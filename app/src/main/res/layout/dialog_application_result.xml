<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_rounded_background"
    android:clipToPadding="false"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with title and close button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/resultTitleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/urbanist_semibold"
                android:text="Application Results"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/closeButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="2dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel" />
        </LinearLayout>

        <!-- Match percentage and recommendation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_gradient_blue"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/matchPercentageText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/urbanist_bold"
                android:text="68% Match"
                android:textColor="@color/white"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/recommendationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/urbanist_semibold"
                android:text="Interview"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- Skills Match -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urbanist_semibold"
            android:text="Skills Match"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <!-- Matched Skills Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/urbanist_semibold"
            android:text="Matched Skills"
            android:textColor="#28A745"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/matched_skills_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/urbanist"
            android:textColor="#666666"
            android:textSize="15sp"
            android:text="campaign management, brand management, marketing strategy, social media marketing, content marketing, email marketing, seo/sem, market research, analytics, budget management, team leadership, business, communication" />

        <!-- Missing Skills Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/urbanist_semibold"
            android:text="Missing Skills"
            android:textColor="#DC3545"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/missing_skills_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/urbanist"
            android:textColor="#666666"
            android:textSize="15sp"
            android:text="communication bachelor's degree in marketing, and presentation skills. marketing manager" />

        <!-- Experience -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urbanist_semibold"
            android:text="Experience"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/experienceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/urbanist"
            android:textColor="#666666"
            android:textSize="15sp"
            android:text="7 years experience (Not specified required)" />

        <!-- Job History -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/urbanist_semibold"
            android:text="Current Position"
            android:textColor="#495057"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/currentPositionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/urbanist"
            android:textColor="#666666"
            android:textSize="15sp"
            android:text="SENIOR MARKETING MANAGER (June 2019 - Present)" />
        
        <!-- Previous Positions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/urbanist_semibold"
            android:text="Previous Positions"
            android:textColor="#495057"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/previousPositionsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/urbanist"
            android:textColor="#666666"
            android:textSize="15sp"
            android:text="August 2016 - May 2019 (33 months)\nJuly 2014 - July 2016 (24 months)" />

        <!-- Education -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urbanist_semibold"
            android:text="Education"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/educationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/urbanist"
            android:textColor="#666666"
            android:textSize="15sp"
            android:text="Master's degree (Bachelor's degree required)" />

        <TextView
            android:id="@+id/educationAssessmentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/urbanist_semibold"
            android:textColor="#28A745"
            android:textSize="15sp"
            android:text="Assessment: Meets Requirement" />

        <!-- Improvement Suggestions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urbanist_semibold"
            android:text="Improvement Suggestions"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <!-- Skills Improvements -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/urbanist_semibold"
            android:text="Skills"
            android:textColor="#495057"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/skillsImprovementText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/urbanist"
            android:textColor="#666666"
            android:textSize="15sp"
            android:text="• Add the following missing skills for this position: communication bachelor's degree in marketing, and presentation skills. marketing manager\n• Use specific examples to demonstrate your listed skills relevant to this position" />

        <!-- General Improvements -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/urbanist_semibold"
            android:text="General"
            android:textColor="#495057"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/generalImprovementText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/urbanist"
            android:textColor="#666666"
            android:textSize="15sp"
            android:text="• Add industry-relevant certifications for this position to strengthen your qualifications\n• Tailor your resume more specifically to the this position description\n• Use more keywords from the this position job posting" />

        <!-- Close Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/okButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:text="OK"
            android:textSize="16sp"
            app:cornerRadius="8dp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView> 