<resources>
    <!-- Circle ImageView -->
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="android:elevation">8dp</item> <!-- Adjust the elevation as needed -->
        <item name="android:translationZ">8dp</item> <!-- This can enhance the floating effect -->
    </style>

    <!-- Light Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/dot_color</item>
        <item name="colorAccent">@color/pink</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryLight</item>
        <item name="android:background">@color/background</item>
    </style>

    <!-- Dark Theme -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your dark theme here -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/dot_color</item>
        <item name="colorAccent">@color/pink</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryDark</item>
        <item name="android:background">@color/black</item>
    </style>

    <!-- Custom TextAppearance for the TextView -->
    <style name="CustomTextAppearancePrimary">
        <item name="android:textColor">@color/vector_fill</item>
    </style>

    <!-- Custom EditText Style -->
    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
    </style>

    <!-- Custom Button Style for Dialog in Light Theme -->
    <style name="DialogButtonStyle.Light" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/button_text_color_light</item> <!-- Black text for light mode -->
        <item name="android:background">@color/button_background</item> <!-- Accent color background -->
    </style>

    <!-- Custom Button Style for Dialog in Dark Theme -->
    <style name="DialogButtonStyle.Dark" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/button_text_color_dark</item> <!-- White text for dark mode -->
        <item name="android:background">@color/button_background</item> <!-- Accent color background -->
    </style>

    <!-- Custom DatePickerDialog Theme for Light Mode -->
    <style name="CustomDatePickerDialog.Light" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:buttonBarButtonStyle">@style/DialogButtonStyle.Light</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogButtonStyle.Light</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogButtonStyle.Light</item>
    </style>

    <!-- Custom DatePickerDialog Theme for Dark Mode -->
    <style name="CustomDatePickerDialog.Dark" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:buttonBarButtonStyle">@style/DialogButtonStyle.Dark</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogButtonStyle.Dark</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogButtonStyle.Dark</item>
    </style>
</resources>
