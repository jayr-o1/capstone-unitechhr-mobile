<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.UnitechHR" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="colorAccent">@color/blue_light</item>
        <!-- Enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>
        <!-- Text colors and other attributes -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <!-- Handle system bars -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:statusBarColor">@color/blue_dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>